<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zoo" />

    <ImageButton
        android:id="@+id/imgh"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:onClick="clickSound"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imge"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/horse" />

    <ImageButton
        android:id="@+id/imge"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:onClick="clickButton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imgh"
        app:layout_constraintEnd_toStartOf="@+id/imgl"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgh"
        app:layout_constraintTop_toTopOf="@+id/imgh"
        app:srcCompat="@drawable/elephant" />

    <ImageButton
        android:id="@+id/imgl"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:onClick="clickbtnSound"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imge"
        app:layout_constraintTop_toTopOf="@+id/imge"
        app:srcCompat="@drawable/lion" />

    <ImageButton
        android:id="@+id/imggo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:onClick="clickMap"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imgcall"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imge"
        app:srcCompat="@drawable/go" />

    <ImageButton
        android:id="@+id/imgcall"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:onClick="clickMobile"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imggo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imggo"
        app:layout_constraintTop_toTopOf="@+id/imggo"
        app:srcCompat="@drawable/call" />
</android.support.constraint.ConstraintLayout>